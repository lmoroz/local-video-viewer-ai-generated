{
  "name": "video-viewer-backend",
  "version": "1.0.0",
  "description": "Backend for Video Viewer",
  "author": "Morozhnikova Larisa",
  "main": "electron-main.js",
  "scripts": {
    "start": "nodemon server.js",
    "electron:dev": "electron .",
    "dist": "node build-installer.js",
    "bundle": "cd ../frontend && npm run build && cd ../backend && node build-installer.js"
  },
  "build": {
    "appId": "com.videoviewer.app",
    "productName": "LocalVideoViewer",
    "directories": {
      "output": "../dist"
    },
    "files": [
      "**/*",
      "../frontend/dist/**/*",
      "../frontend/public/app_icon.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "../frontend/public/app_icon.png"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "lru-cache": "^11.2.4",
    "p-limit": "^7.2.0"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.11"
  }
}
