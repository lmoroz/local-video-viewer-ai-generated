{
  "name": "video-viewer-backend",
  "version": "1.0.0",
  "description": "Backend for Video Viewer",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "electron:dev": "electron .",
    "dist": "node build-installer.js"
  },
  "build": {
    "appId": "com.videoviewer.app",
    "productName": "Video Viewer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "../frontend/dist/**/*",
      "../frontend/public/app_icon.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "../frontend/public/app_icon.png"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12"
  }
}