{
  "name": "video-viewer-backend",
  "version": "1.2.0",
  "description": "Backend for Video Viewer",
  "author": "Morozhnikova Larisa",
  "main": "dist/electron/main.js",
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/server.ts",
    "electron:dev": "cross-env NODE_ENV=development tsc && electron .",
    "test": "vitest",
    "build": "tsc",
    "dist": "npm run build && node build-installer.js",
    "bundle": "cd ../frontend && npm run build && cd ../backend && npm run build && node build-installer.js",
    "structure": "node utils/run-tree.js > STRUCTURE.md"
  },
  "build": {
    "appId": "com.videoviewer.app",
    "productName": "LocalVideoViewer",
    "directories": {
      "output": "../dist"
    },
    "files": [
      "**/*",
      "../frontend/dist/**/*",
      "../frontend/public/app_icon.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "../frontend/public/app_icon.png"
    }
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "lru-cache": "^11.2.4",
    "natural": "^8.1.0",
    "p-limit": "^7.2.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/natural": "^5.1.5",
    "@types/node": "^25.0.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.11",
    "tree-cli": "^0.6.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
